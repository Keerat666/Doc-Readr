<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlcont"
    android:orientation="vertical"
    tools:context=".TxtMaker">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/NAV"
        android:layout_alignParentTop="true"
        app:titleTextColor="@android:color/background_dark" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_alignBottom="@+id/ppcont1"
        android:layout_marginBottom="60dp"
        android:id="@+id/sviewtxt">
        <TextView
            android:id="@+id/tview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           />

    </ScrollView>
    <LinearLayout
        android:id="@+id/ppcont1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">


        <SeekBar
            android:id="@+id/seekBar3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#202020" />

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#000000"

                android:onClick="prevLine"
                app:srcCompat="@drawable/rewind" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#000000"

                android:onClick="play"
                app:srcCompat="@drawable/mdplay" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#000000"

                android:onClick="nextLine"
                app:srcCompat="@drawable/forward" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>